<h1>Projects Listing</h1>

<% @current_user = current_user.ideas.all %>

<% @current_user.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-md-4">
        <h4><%= link_to idea.name, idea %></h4>
        <%= idea.description %>
      </div>
    <% end %>
  </div>
  <br/>
<% end %>